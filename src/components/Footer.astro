---
import logo from "../assets/logo.png";
import up_arrow from "../assets/up_arrow.png";
---

<footer
	class="bg-zinc-900 max-sm:px-12 px-16 lg:px-32 max-sm:py-6 py-8 lg:py-8 flex justify-between items-center"
>
	<img
		src={logo.src}
		width={logo.width}
		height={logo.height}
		alt=""
		class="max-sm:w-8 w-12"
	/>
	<a href="#top">
		<img
			src={up_arrow.src}
			width={up_arrow.width}
			height={up_arrow.height}
			alt="Link to the top of the page"
			class="max-sm:w-8 w-12"
		/>
	</a>
</footer>
